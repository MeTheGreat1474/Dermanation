<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base app theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#F06292</item> <!-- Button background color -->
        <item name="android:background">@drawable/button_rounded</item>
<!--        <item name="textColor">#FFFFFF</item> -->
    </style>

    <style name="CustomButtonStyle2" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomButtonStyle3" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#A8A9AD</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
