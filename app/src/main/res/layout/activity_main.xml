<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <LinearLayout
        android:id="@+id/LLBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_round_corner"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Dermanation"
            android:textColor="@color/offWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back,"
            android:textColor="@color/offWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TVName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/offWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLQuickAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLBanner">

        <TextView
            android:id="@+id/TVLabelQuickAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="Quick Action"
            android:textColor="@color/pink"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/TLQuickAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/TRQuickAction1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/IVProfile"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/db_profile2_c"
                    tools:srcCompat="@drawable/db_profile2_c" />

                <ImageView
                    android:id="@+id/IVDonate"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/db_donation_c" />

                <ImageView
                    android:id="@+id/IVCommunity"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/db_networking_c" />

                <ImageView
                    android:id="@+id/IVSupport"
                    android:layout_width="16dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/db_technical_support_c" />
            </TableRow>

            <TableRow
                android:id="@+id/TRText1"
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/TVProfile"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVDonate"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Donate"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVCommunity"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Community"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVSupport"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Support"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/TRQuickAction2"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IVVolunteer"
                    android:layout_width="16dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/db_charity_c" />

                <ImageView
                    android:id="@+id/IVBeneficiary"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/db_pay_c" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:visibility="invisible" />

                <ImageView
                    android:id="@+id/button22"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

            </TableRow>

            <TableRow
                android:id="@+id/TRText2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="start"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/TVVolunteer"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Volunteer"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVBeneficiary"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Beneficiary"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView132"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:visibility="invisible" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/TVLabelQuickAction2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="Stories Around The World"
            android:textColor="@color/pink"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/SVStories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/LVStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>