<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="277dp"
    android:layout_height="318dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="277dp"
            android:layout_height="182dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blood_donation_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:background="@color/gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="26dp"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">


                <FrameLayout
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/outer_circle_stroke" />

                    <ImageView
                        android:id="@+id/iconView"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/circular_shape"
                        android:layout_gravity="center"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <TextView
                    android:id="@+id/organizationNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="Organization Name"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="32dp"
                    android:background="@drawable/participant_count_background"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/participantIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="start|center_vertical"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/participantCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="6dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
